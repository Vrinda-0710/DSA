//CHECK FOR BALANCED TREE 

bool isBalanced(Node* root){
    if (root==NULL) return true;
    int lh=height(root->left);
    int rh=height(root->right);
    return (abs(lh-rh)<=1 && isBalanced(root->left) && (root->right));
}


